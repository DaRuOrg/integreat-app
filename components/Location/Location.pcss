:root {
  --hover-color: rgba(0, 0, 0, 0.1);
  --item-height: 30px;

  --list-margin: 10px;
}

.loading {
  display: flex;
  justify-content: center;
  margin: 100px;
}

.language-list-item {
  display: block;

  text-decoration: inherit;
  color: inherit;

  height: var(--item-height);
  line-height: var(--item-height);

  margin-left: var(--list-margin);

  &:hover {
    transition: background-color 0.5s ease;
    background-color: var(--hover-color);

    text-decoration: inherit;
    color: inherit;
  }
}

.language-list-parent {
  height: var(--item-height);
  line-height: var(--item-height);

  padding-left: calc(var(--list-margin) + 30px);
  border-bottom: 1px solid rgba(255, 165, 0, 0.42);
}
